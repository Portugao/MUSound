{# purpose of this template: tracks atom feed #}
<?xml version="1.0" encoding="{% set charset = pageGetVar('meta.charset') %}{% if charset == 'ISO-8859-15' %}ISO-8859-1{% else %}{{ charset }}{% endif %}" ?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title type="text">{{ __('Latest tracks') }}</title>
    <subtitle type="text">{{ __('A direct feed showing the list of tracks') }} - {{ getModVar('ZConfig', 'slogan') }}</subtitle>
    <author>
        <name>{{ getModVar('ZConfig', 'sitename') }}</name>
    </author>
{% set amountOfItems = items|length %}
{% if amountOfItems > 0 %}
{% set uniqueID %}tag:{{ app.request.getSchemeAndHttpHost()|replace({'http://': '', '/': ''}) }},{{ items.first.createdDate|date('Y-m-d') }}:{{ path('musoundmodule_track_' ~ routeArea ~ 'display', {'id': items.first.getId()}) }}{% endset %}
    <id>{{ uniqueID }}</id>
    <updated>{{ items[0].updatedDate|date('Y-m-dTH:M:SZ') }}</updated>
{% endif %}
    <link rel="alternate" type="text/html" hreflang="{{ app.request.locale }}" href="{{ url('musoundmodule_track_' ~ routeArea ~ 'index') }}" />
    <link rel="self" type="application/atom+xml" href="{{ app.request.getSchemeAndHttpHost() ~ app.request.getBasePath() }}" />
    <rights>Copyright (c) {{ 'now'|date('Y') }}, {{ app.request.getSchemeAndHttpHost()|e }}</rights>
{% for track in items %}
    {{ block('entry') }}
{% endfor %}
</feed>
{% block entry %}
    <entry>
        {{ block('entry_content') }}
    </entry>
{% endblock %}
{% block entry_content %}
    <title type="html">{{ track|musoundmodule_formattedTitle|notifyFilters('musoundmodule.filterhook.tracks')|safeHtml }}</title>
    <link rel="alternate" type="text/html" href="{{ url('musoundmodule_track_' ~ routeArea ~ 'display', {'id': track.getId()}) }}" />
    {% set uniqueID %}tag:{{ app.request.getSchemeAndHttpHost()|replace({ 'http://': '', '/': '' }) }},{{ track.createdDate|date('Y-m-d') }}:{{ path('musoundmodule_track_' ~ routeArea ~ 'display', {'id': track.getId()}) }}{% endset %}
    <id>{{ uniqueID }}</id>
    {% if track.updatedDate|default %}
        <updated>{{ track.updatedDate|date('Y-m-dTH:M:SZ') }}</updated>
    {% endif %}
    {% if track.createdDate|default %}
        <published>{{ track.createdDate|date('Y-m-dTH:M:SZ') }}</published>
    {% endif %}
    {% if track.createdBy|default and track.createdBy.getUid() > 0 %}
        {% set creatorAttributes = track.createdBy.getAttributes() %}
        <author>
           <name>{{ creatorAttributes.get('realname')|default(creatorAttributes.get('name'))|default(track.createdBy.getUname()) }}</name>
           <uri>{{ creatorAttributes.get('_UYOURHOMEPAGE')|default('-') }}</uri>
           <email>{{ track.createdBy.getEmail() }}</email>
        </author>
    {% endif %}
    <summary type="html">
        <![CDATA[
        {{ track.description|truncate(150, true, '&hellip;')|default('-') }}
        ]]>
    </summary>
    <content type="html">
        <![CDATA[
        {{ track.title|replace({ '<br>': '<br />' }) }}
        ]]>
    </content>
{% endblock %}
