{# purpose of this template: collections user display view #}
{% set baseTemplate = app.request.query.getBoolean('raw', false) ? 'raw' : 'base' %}
{% extends 'MUSoundModule::' ~ baseTemplate ~ '.html.twig' %}
{% block pageTitle %}{{ collection|musoundmodule_formattedTitle|default(__('Collection')) }}{% endblock %}
{% block title %}
    {% set templateTitle = collection|musoundmodule_formattedTitle|default(__('Collection')) %}
    {{ templateTitle|notifyFilters('musoundmodule.filter_hooks.collections.filter')|safeHtml }}
    {% set itemActions = knp_menu_get('MUSoundModule:ItemActionsMenu:menu', [], {entity: collection, area: routeArea, context: 'display'}) %}
    <div class="dropdown">
        <a id="itemActions{{ collection.getKey() }}DropDownToggle" role="button" data-toggle="dropdown" data-target="#" href="javascript:void(0);" class="hidden dropdown-toggle"><i class="fa fa-tasks"></i> {{ __('Actions') }} <span class="caret"></span></a>
        {{ knp_menu_render(itemActions, {template: 'ZikulaMenuModule:Override:actions.html.twig'}) }}
    </div>
{% endblock %}
{% block content %}
    {% set isQuickView = app.request.query.getBoolean('raw', false) %}
    <div class="musoundmodule-collection musoundmodule-display">

    <div class="row">
        <div class="col-sm-9">
    <dl>
        {% if collection.title is not empty %}
            <dt>{{ __('Title') }}</dt>
            <dd>{{ collection.title }}</dd>
        {% endif %}
        {% if collection.description is not empty %}
            <dt>{{ __('Description') }}</dt>
            <dd>{{ collection.description|safeHtml }}</dd>
        {% endif %}
        
    </dl>

    {{ include('@MUSoundModule/Helper/includeStandardFieldsDisplay.html.twig', {obj: collection}) }}

    {{ block('display_hooks') }}
        </div>
        <div class="col-sm-3">
            {{ block('related_items') }}
        </div>
    </div>
</div>
{% endblock %}
{% block related_items %}
    {% if routeArea == 'admin' %}
        <h4>{{ __('Albums') }}</h4>
    {% else %}
        <h3>{{ __('Albums') }}</h3>
    {% endif %}
    
    {% if collection.album|default %}
        {{ include(
            '@MUSoundModule/Album/includeDisplayItemListMany.html.twig',
            {items: collection.album}
        ) }}
    {% endif %}
    
    {% set mayManage = hasPermission('MUSoundModule:Album:', '::', 'ACCESS_COMMENT') %}
    {% if mayManage %}
        <p class="managelink">
            {% set createTitle = __('Create album') %}
            <a href="{{ path('musoundmodule_album_' ~ routeArea ~ 'edit', {collection: collection.getKey()}) }}" title="{{ createTitle|e('html_attr') }}" class="fa fa-plus">{{ createTitle }}</a>
        </p>
    {% endif %}
{% endblock %}
{% block display_hooks %}
    {% set hooks = notifyDisplayHooks(eventName='musoundmodule.ui_hooks.collections.display_view', id=collection.getKey(), urlObject=currentUrlObject) %}
    {% for providerArea, hook in hooks if providerArea != 'provider.scribite.ui_hooks.editor' %}
        <h4>{{ providerArea }}</h4>
        {{ hook }}
    {% endfor %}
{% endblock %}
