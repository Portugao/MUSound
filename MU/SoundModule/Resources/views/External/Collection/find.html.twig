{# Purpose of this template: Display a popup selector of collections for scribite integration #}
{% set useFinder = true %}
{% extends 'MUSoundModule::raw.html.twig' %}
{% block title __('Search and select collection') %}
{% block content %}
    <div class="container">
        <div class="zikula-bootstrap-tab-container">
            <ul class="nav nav-tabs">
            {% set activatedObjectTypes = getModVar('MUSoundModule', 'enabledFinderTypes', []) %}
            {% if 'album' in activatedObjectTypes %}
                <li{{ objectType == 'album' ? ' class="active"' : '' }}><a href="{{ path('musoundmodule_external_finder', {objectType: 'album', editor: editorName}) }}" title="{{ __('Search and select album') }}">{{ __('Albums') }}</a></li>
            {% endif %}
            {% if 'track' in activatedObjectTypes %}
                <li{{ objectType == 'track' ? ' class="active"' : '' }}><a href="{{ path('musoundmodule_external_finder', {objectType: 'track', editor: editorName}) }}" title="{{ __('Search and select track') }}">{{ __('Tracks') }}</a></li>
            {% endif %}
            {% if 'collection' in activatedObjectTypes %}
                <li{{ objectType == 'collection' ? ' class="active"' : '' }}><a href="{{ path('musoundmodule_external_finder', {objectType: 'collection', editor: editorName}) }}" title="{{ __('Search and select collection') }}">{{ __('Collections') }}</a></li>
            {% endif %}
            </ul>
        </div>
        {% form_theme finderForm with [
            '@MUSoundModule/Form/bootstrap_3.html.twig',
            'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
        ] %}
        {{ form_start(finderForm, {attr: {id: 'mUSoundModuleSelectorForm'}}) }}
        {{ form_errors(finderForm) }}
        <fieldset>
            <legend>{{ __('Search and select collection') }}</legend>
            {{ form_row(finderForm.pasteAs) }}
            <br />
            <div class="form-group">
                <label class="col-sm-3 control-label">{{ __('Collection') }}:</label>
                <div class="col-sm-9">
                    <div id="musoundmoduleItemContainer">
                        <ul>
                            {% for collection in items %}
                                <li>
                                    {% set itemId = collection.getKey() %}
                                    <a href="#" data-itemid="{{ itemId }}">
                                        {{ collection|musoundmodule_formattedTitle }}
                                    </a>
                                    <input type="hidden" id="path{{ itemId }}" value="{{ path('musoundmodule_collection_display', {'id': collection.getId()}) }}" />
                                    <input type="hidden" id="url{{ itemId }}" value="{{ url('musoundmodule_collection_display', {'id': collection.getId()}) }}" />
                                    <input type="hidden" id="title{{ itemId }}" value="{{ collection|musoundmodule_formattedTitle|e('html_attr') }}" />
                                    <input type="hidden" id="desc{{ itemId }}" value="{% set description %}{% if collection.description is not empty %}{{ collection.description }}{% endif %}
                                    {% endset %}{{ description|striptags|e('html_attr') }}" />
                                </li>
                            {% else %}
                                <li>{{ __('No collections found.') }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>

            {{ form_row(finderForm.sort) }}
            {{ form_row(finderForm.sortdir) }}
            {{ form_row(finderForm.num) }}
            {{ form_row(finderForm.q) }}
            <div>
                {{ pager({display: 'page', rowcount: pager.numitems, limit: pager.itemsperpage, posvar: 'pos', maxpages: 10, route: 'musoundmodule_external_finder'}) }}
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    {{ form_widget(finderForm.update) }}
                    {{ form_widget(finderForm.cancel) }}
                </div>
            </div>
        </fieldset>
        {{ form_end(finderForm) }}
    </div>

    {#
    <div class="musoundmodule-finderform">
        <fieldset>
            {{ render(controller('MUSoundModule:Collection:edit')) }}
        </fieldset>
    </div>
    #}
{% endblock %}
