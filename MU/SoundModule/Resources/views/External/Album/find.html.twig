{# Purpose of this template: Display a popup selector of albums for scribite integration #}
{% set useFinder = true %}
{% extends 'MUSoundModule::raw.html.twig' %}
{% block title __('Search and select album') %}
{% block content %}
    <div class="container">
        <div class="zikula-bootstrap-tab-container">
            <ul class="nav nav-tabs">
            {% set activatedObjectTypes = getModVar('MUSoundModule', 'enabledFinderTypes', []) %}
            {% if 'album' in activatedObjectTypes %}
                <li{{ objectType == 'album' ? ' class="active"' : '' }}><a href="{{ path('musoundmodule_external_finder', {objectType: 'album', editor: editorName}) }}" title="{{ __('Search and select album') }}">{{ __('Albums') }}</a></li>
            {% endif %}
            {% if 'track' in activatedObjectTypes %}
                <li{{ objectType == 'track' ? ' class="active"' : '' }}><a href="{{ path('musoundmodule_external_finder', {objectType: 'track', editor: editorName}) }}" title="{{ __('Search and select track') }}">{{ __('Tracks') }}</a></li>
            {% endif %}
            {% if 'collection' in activatedObjectTypes %}
                <li{{ objectType == 'collection' ? ' class="active"' : '' }}><a href="{{ path('musoundmodule_external_finder', {objectType: 'collection', editor: editorName}) }}" title="{{ __('Search and select collection') }}">{{ __('Collections') }}</a></li>
            {% endif %}
            </ul>
        </div>
        {% form_theme finderForm with [
            '@MUSoundModule/Form/bootstrap_3.html.twig',
            'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
        ] %}
        {{ form_start(finderForm, {attr: {id: 'mUSoundModuleSelectorForm'}}) }}
        {{ form_errors(finderForm) }}
        <fieldset>
            <legend>{{ __('Search and select album') }}</legend>
            {% if featureActivationHelper.isEnabled(constant('MU\\SoundModule\\Helper\\FeatureActivationHelper::CATEGORIES'), 'album') %}
                {{ form_row(finderForm.categories) }}
            {% endif %}
            {{ form_row(finderForm.onlyImages) }}
            <div id="imageFieldRow">
                {{ form_row(finderForm.imageField) }}
            </div>
            {{ form_row(finderForm.pasteAs) }}
            <br />
            <div class="form-group">
                <label class="col-sm-3 control-label">{{ __('Album') }}:</label>
                <div class="col-sm-9">
                    <div id="musoundmoduleItemContainer">
                        {% if not onlyImages %}
                            <ul>
                        {% endif %}
                            {% for album in items %}
                                {% if not onlyImages or (attribute(album, imageField) is not empty and attribute(album, imageField ~ 'Meta').isImage) %}
                                {% if not onlyImages %}
                                    <li>
                                {% endif %}
                                    {% set itemId = album.getKey() %}
                                    <a href="#" data-itemid="{{ itemId }}">
                                        {% if onlyImages %}
                                            {% set thumbOptions = attribute(thumbRuntimeOptions, 'album' ~ imageField[:1]|upper ~ imageField[1:]) %}
                                            <img src="{{ attribute(album, imageField).getPathname()|imagine_filter('zkroot', thumbOptions) }}" alt="{{ album|musoundmodule_formattedTitle|e('html_attr') }}" width="{{ thumbOptions.thumbnail.size[0] }}" height="{{ thumbOptions.thumbnail.size[1] }}" class="img-rounded" />
                                        {% else %}
                                            {{ album|musoundmodule_formattedTitle }}
                                        {% endif %}
                                    </a>
                                    <input type="hidden" id="path{{ itemId }}" value="{{ path('musoundmodule_album_display', {'id': album.getId()}) }}" />
                                    <input type="hidden" id="url{{ itemId }}" value="{{ url('musoundmodule_album_display', {'id': album.getId()}) }}" />
                                    <input type="hidden" id="title{{ itemId }}" value="{{ album|musoundmodule_formattedTitle|e('html_attr') }}" />
                                    <input type="hidden" id="desc{{ itemId }}" value="{% set description %}{% if album.description is not empty %}{{ album.description }}{% endif %}
                                    {% endset %}{{ description|striptags|e('html_attr') }}" />
                                    {% if onlyImages %}
                                        <input type="hidden" id="imagePath{{ itemId }}" value="/{{ attribute(album, imageField).getPathname() }}" />
                                    {% endif %}
                                {% if not onlyImages %}
                                    </li>
                                {% endif %}
                                {% endif %}
                            {% else %}
                                {% if not onlyImages %}<li>{% endif %}{{ __('No albums found.') }}{% if not onlyImages %}</li>{% endif %}
                            {% endfor %}
                        {% if not onlyImages %}
                            </ul>
                        {% endif %}
                    </div>
                </div>
            </div>

            {{ form_row(finderForm.sort) }}
            {{ form_row(finderForm.sortdir) }}
            {{ form_row(finderForm.num) }}
            <div id="searchTermRow">
                {{ form_row(finderForm.q) }}
            </div>
            <div>
                {{ pager({display: 'page', rowcount: pager.numitems, limit: pager.itemsperpage, posvar: 'pos', maxpages: 10, route: 'musoundmodule_external_finder'}) }}
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    {{ form_widget(finderForm.update) }}
                    {{ form_widget(finderForm.cancel) }}
                </div>
            </div>
        </fieldset>
        {{ form_end(finderForm) }}
    </div>

    {#
    <div class="musoundmodule-finderform">
        <fieldset>
            {{ render(controller('MUSoundModule:Album:edit')) }}
        </fieldset>
    </div>
    #}
{% endblock %}
