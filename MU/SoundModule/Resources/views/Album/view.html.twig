{# purpose of this template: albums user list view #}
{% extends 'MUSoundModule::base.html.twig' %}
{% block title own ? __('My albums') : __('Albums list') %}
{% block content %}
<div class="musoundmodule-album musoundmodule-view">

    {{ block('page_nav_links') }}

    {{ include('@MUSoundModule/Album/viewQuickNav.html.twig') }}{# see template file for available options #}

    {% if routeArea == 'admin' %}
    <form action="{{ path('musoundmodule_album_' ~ routeArea ~ 'handleselectedentries') }}" method="post" id="albumsViewForm" class="form-horizontal" role="form">
        <div>
    {% endif %}
        <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <colgroup>
                {% if routeArea == 'admin' %}
                    <col id="cSelect" />
                {% endif %}
                <col id="cItemActions" />
                {% if routeArea == 'admin' %}
                <col id="cWorkflowState" />
                {% endif %}
                <col id="cTitle" />
                <col id="cDescription" />
                <col id="cAuthor" />
                <col id="cUploadCover" />
                <col id="cPublishedDate" />
                <col id="cPublishedText" />
                <col id="cCollection" />
            </colgroup>
            <thead>
            <tr>
                {% if routeArea == 'admin' %}
                    <th id="hSelect" scope="col" class="{% if items|length > 0 %}fixed-column {% endif %}text-center z-w02">
                        <input type="checkbox" class="musound-mass-toggle" />
                    </th>
                {% endif %}
                <th id="hItemActions" scope="col" class="{% if items|length > 0 %}fixed-column {% endif %}z-order-unsorted z-w02">{{ __('Actions') }}</th>
                {% if routeArea == 'admin' %}
                <th id="hWorkflowState" scope="col" class="text-left">
                    <a href="{{ sort.workflowState.url }}" title="{{ __f('Sort by %s', {'%s': 'state'}) }}" class="{{ sort.workflowState.class }}">{{ __('State') }}</a>
                </th>
                {% endif %}
                <th id="hTitle" scope="col" class="text-left">
                    <a href="{{ sort.title.url }}" title="{{ __f('Sort by %s', {'%s': 'title'}) }}" class="{{ sort.title.class }}">{{ __('Title') }}</a>
                </th>
                <th id="hDescription" scope="col" class="text-left">
                    <a href="{{ sort.description.url }}" title="{{ __f('Sort by %s', {'%s': 'description'}) }}" class="{{ sort.description.class }}">{{ __('Description') }}</a>
                </th>
                <th id="hAuthor" scope="col" class="text-left">
                    <a href="{{ sort.author.url }}" title="{{ __f('Sort by %s', {'%s': 'author'}) }}" class="{{ sort.author.class }}">{{ __('Author') }}</a>
                </th>
                <th id="hUploadCover" scope="col" class="text-left">
                    <a href="{{ sort.uploadCover.url }}" title="{{ __f('Sort by %s', {'%s': 'upload cover'}) }}" class="{{ sort.uploadCover.class }}">{{ __('Upload cover') }}</a>
                </th>
                <th id="hPublishedDate" scope="col" class="text-left">
                    <a href="{{ sort.publishedDate.url }}" title="{{ __f('Sort by %s', {'%s': 'published date'}) }}" class="{{ sort.publishedDate.class }}">{{ __('Published date') }}</a>
                </th>
                <th id="hPublishedText" scope="col" class="text-left">
                    <a href="{{ sort.publishedText.url }}" title="{{ __f('Sort by %s', {'%s': 'published text'}) }}" class="{{ sort.publishedText.class }}">{{ __('Published text') }}</a>
                </th>
                <th id="hCollection" scope="col" class="text-left">
                    <a href="{{ sort.collection.url }}" title="{{ __f('Sort by %s', {'%s': 'collection'}) }}" class="{{ sort.collection.class }}">{{ __('Collection') }}</a>
                </th>
            </tr>
            </thead>
            <tbody>
        
        {% for album in items %}
            <tr>
                {% if routeArea == 'admin' %}
                    <td headers="hSelect" class="fixed-column text-center z-w02">
                        <input type="checkbox" name="items[]" value="{{ album.getKey() }}" class="musound-toggle-checkbox" />
                    </td>
                {% endif %}
                <td id="itemActions{{ album.getKey() }}" headers="hItemActions" class="fixed-column actions nowrap z-w02">
                    {% set itemActions = knp_menu_get('MUSoundModule:ItemActionsMenu:menu', [], {entity: album, area: routeArea, context: 'view'}) %}
                    <div class="dropdown">
                        <a id="itemActions{{ album.getKey() }}DropDownToggle" role="button" data-toggle="dropdown" data-target="#" href="javascript:void(0);" class="hidden dropdown-toggle"><i class="fa fa-tasks"></i> <span class="caret"></span></a>
                        {{ knp_menu_render(itemActions, {template: 'ZikulaMenuModule:Override:actions.html.twig'}) }}
                    </div>
                </td>
                {% if routeArea == 'admin' %}<td headers="hWorkflowState" class="text-left nowrap">
                    {{ album.workflowState|musoundmodule_objectState }}
                </td>
                {% endif %}<td headers="hTitle" class="text-left">
                    <a href="{{ path('musoundmodule_album_' ~ routeArea ~ 'display', {'id': album.getId()}) }}" title="{{ __('View detail page')|e('html_attr') }}">{{ album.title|notifyFilters('musoundmodule.filterhook.albums')|safeHtml }}</a>
                </td>
                <td headers="hDescription" class="text-left">
                    {{ album.description|striptags|truncate(50) }}
                </td>
                <td headers="hAuthor" class="text-left">
                    {{ album.author }}
                </td>
                <td headers="hUploadCover" class="text-left">
                    {% if album.uploadCover is not empty and album.uploadCoverMeta|default %}
                                <a href="{{ album.uploadCoverUrl }}" title="{{ album|musoundmodule_formattedTitle|e('html_attr') }}"{% if album.uploadCoverMeta.isImage %} class="image-link"{% endif %}>
                    {% if album.uploadCoverMeta.isImage %}
                        {% set thumbOptions = attribute(thumbRuntimeOptions, 'albumUploadCover') %}
                        <img src="{{ album.uploadCover.getPathname()|imagine_filter('zkroot', thumbOptions) }}" alt="{{ album|musoundmodule_formattedTitle|e('html_attr') }}" width="{{ thumbOptions.thumbnail.size[0] }}" height="{{ thumbOptions.thumbnail.size[1] }}" class="img-thumbnail" />
                    {% else %}
                        {{ __('Download') }} ({{ album.uploadCoverMeta.size|musoundmodule_fileSize(album.uploadCover.getPathname(), false, false) }})
                    {% endif %}
                    </a>
                    {% else %}&nbsp;{% endif %}
                </td>
                <td headers="hPublishedDate" class="text-left">
                    {{ album.publishedDate|localizeddate('medium', 'short') }}
                </td>
                <td headers="hPublishedText" class="text-left">
                    {{ album.publishedText }}
                </td>
                <td headers="hCollection" class="text-left">
                    {% if album.collection|default %}
                        <a href="{{ path('musoundmodule_collection_' ~ routeArea ~ 'display', {'id': album.collection.getId()}) }}">{% spaceless %}
                          {{ album.collection|musoundmodule_formattedTitle }}
                        {% endspaceless %}</a>
                        <a id="collectionItem{{ album.getKey() }}_rel_{{ album.collection.getKey() }}Display" href="{{ path('musoundmodule_collection_' ~ routeArea ~ 'display', {'id': album.collection.getId(), raw: 1}) }}" title="{{ __('Open quick view window')|e('html_attr') }}" class="musound-inline-window hidden" data-modal-title="{{ album.collection|musoundmodule_formattedTitle|e('html_attr') }}"><span class="fa fa-id-card-o"></span></a>
                    {% else %}
                        {{ __('Not set.') }}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr class="z-{{ routeArea == 'admin' ? 'admin' : 'data' }}tableempty">
                <td class="text-left" colspan="{% if routeArea == 'admin' %}10{% else %}9{% endif %}">
            {{ __('No albums found.') }}
              </td>
            </tr>
        {% endfor %}
        
            </tbody>
        </table>
        </div>
        
        {% if all != 1 and pager|default %}
            {{ pager({rowcount: pager.amountOfItems, limit: pager.itemsPerPage, display: 'page', route: 'musoundmodule_album_' ~ routeArea ~ 'view'}) }}
        {% endif %}
    {% if routeArea == 'admin' %}
            <fieldset>
                <label for="mUSoundModuleAction" class="col-sm-3 control-label">{{ __('With selected albums') }}</label>
                <div class="col-sm-6">
                    <select id="mUSoundModuleAction" name="action" class="form-control input-sm">
                        <option value="">{{ __('Choose action') }}</option>
                        <option value="approve" title="{{ __('Update content and approve for immediate publishing.') }}">{{ __('Approve') }}</option>
                        <option value="delete" title="{{ __('Delete content permanently.') }}">{{ __('Delete') }}</option>
                    </select>
                </div>
                <div class="col-sm-3">
                    <input type="submit" value="{{ __('Submit') }}" class="btn btn-default btn-sm" />
                </div>
            </fieldset>
        </div>
    </form>
    {% endif %}

    {{ block('display_hooks') }}
</div>
{% endblock %}
{% block page_nav_links %}
    <p>
        {% if canBeCreated %}
            {% if hasPermission('MUSoundModule:Album:', '::', 'ACCESS_COMMENT') %}
                {% set createTitle = __('Create album') %}
                <a href="{{ path('musoundmodule_album_' ~ routeArea ~ 'edit') }}" title="{{ createTitle|e('html_attr') }}" class="fa fa-plus">{{ createTitle }}</a>
            {% endif %}
        {% endif %}
        {% if all == 1 %}
            {% set linkTitle = __('Back to paginated view') %}
            <a href="{{ path('musoundmodule_album_' ~ routeArea ~ 'view') }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
        {% else %}
            {% set linkTitle = __('Show all entries') %}
            <a href="{{ path('musoundmodule_album_' ~ routeArea ~ 'view', {all: 1}) }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
        {% endif %}
    </p>
{% endblock %}
{% block display_hooks %}
    
    {# here you can activate calling display hooks for the view page if you need it #}
    {# % if routeArea != 'admin' %}
        {% set hooks = notifyDisplayHooks(eventName='musoundmodule.ui_hooks.albums.display_view', urlObject=currentUrlObject) %}
        {% for providerArea, hook in hooks %}
            {{ hook }}
        {% endfor %}
    {% endif % #}
{% endblock %}
