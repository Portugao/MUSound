{# purpose of this template: albums atom feed #}
<?xml version="1.0" encoding="{% set charset = pageGetVar('meta.charset') %}{% if charset == 'ISO-8859-15' %}ISO-8859-1{% else %}{{ charset }}{% endif %}" ?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title type="text">{{ __('Latest albums') }}</title>
    <subtitle type="text">{{ __('A direct feed showing the list of albums') }} - {{ getModVar('ZConfig', 'slogan') }}</subtitle>
    <author>
        <name>{{ getModVar('ZConfig', 'sitename') }}</name>
    </author>
{% set amountOfItems = items|length %}
{% if amountOfItems > 0 %}
{% set uniqueID %}tag:{{ app.request.getSchemeAndHttpHost()|replace({'http://': '', '/': ''}) }},{{ items.first.createdDate|date('Y-m-d') }}:{{ path('musoundmodule_album_' ~ routeArea ~ 'display', {'id': items.first.getId()}) }}{% endset %}
    <id>{{ uniqueID }}</id>
    <updated>{{ items[0].updatedDate|date('Y-m-dTH:M:SZ') }}</updated>
{% endif %}
    <link rel="alternate" type="text/html" hreflang="{{ app.request.locale }}" href="{{ url('musoundmodule_album_' ~ routeArea ~ 'index') }}" />
    <link rel="self" type="application/atom+xml" href="{{ app.request.getSchemeAndHttpHost() ~ app.request.getBasePath() }}" />
    <rights>Copyright (c) {{ 'now'|date('Y') }}, {{ app.request.getSchemeAndHttpHost()|e }}</rights>
{% for album in items %}
    {{ block('entry') }}
{% endfor %}
</feed>
{% block entry %}
    <entry>
        {{ block('entry_content') }}
    </entry>
{% endblock %}
{% block entry_content %}
    <title type="html">{{ album|musoundmodule_formattedTitle|notifyFilters('musoundmodule.filterhook.albums')|safeHtml }}</title>
    <link rel="alternate" type="text/html" href="{{ url('musoundmodule_album_' ~ routeArea ~ 'display', {'id': album.getId()}) }}" />
    {% set uniqueID %}tag:{{ app.request.getSchemeAndHttpHost()|replace({ 'http://': '', '/': '' }) }},{{ album.createdDate|date('Y-m-d') }}:{{ path('musoundmodule_album_' ~ routeArea ~ 'display', {'id': album.getId()}) }}{% endset %}
    <id>{{ uniqueID }}</id>
    {% if album.updatedDate|default %}
        <updated>{{ album.updatedDate|date('Y-m-dTH:M:SZ') }}</updated>
    {% endif %}
    {% if album.createdDate|default %}
        <published>{{ album.createdDate|date('Y-m-dTH:M:SZ') }}</published>
    {% endif %}
    {% if album.createdBy|default and album.createdBy.getUid() > 0 %}
        {% set creatorAttributes = album.createdBy.getAttributes() %}
        <author>
           <name>{{ creatorAttributes.get('realname')|default(creatorAttributes.get('name'))|default(album.createdBy.getUname()) }}</name>
           <uri>{{ creatorAttributes.get('_UYOURHOMEPAGE')|default('-') }}</uri>
           <email>{{ album.createdBy.getEmail() }}</email>
        </author>
    {% endif %}
    <summary type="html">
        <![CDATA[
        {{ album.description|truncate(150, true, '&hellip;')|default('-') }}
        ]]>
    </summary>
    <content type="html">
        <![CDATA[
        {{ album.title|replace({ '<br>': '<br />' }) }}
        ]]>
    </content>
{% endblock %}
